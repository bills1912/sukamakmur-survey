{
    "name": "assistant-engine/open-functions-core",
    "description": "A core library that provides a framework for building and registering Open Functions for AI-powered applications. It simplifies integration with large language models by standardizing function definitions, message handling, and response formatting, reducing boilerplate for advanced assistant capabilities.",
    "type": "library",
    "keywords": [
        "assistant-engine",
        "laravel",
        "open ai",
        "LLM",
        "GenAI"
    ],
    "homepage": "https://github.com/AssistantEngine/open-functions-core",
    "license": "MIT",
    "authors": [
        {
            "name": "Florian Weigang",
            "email": "florian@assistant-engine.com"
        }
    ],
    "require": {
        "php": "^8.2"
    },

    "require-dev": {
        "phpunit/phpunit": "^11.5",
        "openai-php/client": "^0.10.3",
        "symfony/http-client": "^7.2",
        "nyholm/psr7": "^1.8"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "AssistantEngine\\OpenFunctions\\Core\\": "src/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
